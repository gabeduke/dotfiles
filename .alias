alias copy="xclip -selection c"
alias paste="xclip -selection clipboard -o"

alias pgadmin4='docker run -d \
--restart always \
--name pgadmin4 \
--network host \
-p 5050:5050 \
-e UID=1000 \
-e GID=1000 \
-v ~/.pgadmin4:/data \
-v /usr/lib/postgresql/9.6/bin:/usr/lib/postgresql/9.6/bin \
-v /var/run/postgres:/var/run/postgres \
chorss/docker-pgadmin4:2.0'

alias cl='clear && ls -alF'

### AWS
awsprof() { 
    if [ -z "${1}" ]; then
        cat ~/.aws/credentials | grep -oP '\[\K[^\]]+'
    else
        export AWS_PROFILE=${1}
    fi
}

